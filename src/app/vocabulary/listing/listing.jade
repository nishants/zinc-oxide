ul.tab-buttons
  li.active.selected
    .tab-shape
    .label Active
  li.completed
    .tab-shape
    .label Completed
  li.explore
    .tab-shape
    .label Explore

.tab-body
  ul.deck
    li(ng-repeat='game in [{title: "Fun Words", by: "Zinc", description: "Fun Words to learn this summer.", words: "one, two, three, four", status: "bonus", time: 1212}]')
      .game.card
        .picture
          img(src="assets/images/vocab.eg.jpg")
        .title(ng-bind="game.title")
        .by
          span By &nbsp;
          span(ng-bind="game.by")
        .description(ng-bind="game.description")
        .words
          .quote.fa.fa-quote-left
          span.word(ng-bind='game.words')
          .quote.right.fa.fa-quote-right

        button.open View



