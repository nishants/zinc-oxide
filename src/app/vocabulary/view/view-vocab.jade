.vocabset.card(ng-class="{'single-deck' : vocabset.decks.length==1}")
  .assigned(ng-if='vocabset.assigned')
    .assigned-date Assigned on {{vocabset.assigned.date}}
    .assigned-by
      .picture
        img(ng-src='{{vocabset.assigned.by.picture}}')
      .name(ng-bind='vocabset.assigned.by.name')
    .assigned-message
      span(ng-bind='vocabset.assigned.message')
      .speak
  .cover-image
    img(ng-src='{{vocabset.image}}')
  .author
    .title(ng-bind="vocabset.title")
    .by By {{vocabset.by}}
    .description(ng-bind='vocabset.description')
  .reader(ng-if='vocabset.reader')
    .headline.title(ng-bind='vocabset.reader.headline')
    .text(ng-bind='vocabset.reader.text')
  .deck(ng-repeat='deck in vocabset.decks',ng-class='{"locked" : deck.locked}')
    include view-vocab-deck/view-vocab-deck
