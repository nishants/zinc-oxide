.targets
  .target(ng-repeat='target in gamePlay.current.word.image.options.slice(0,2)', ng-drop='true', ng-drop-success='onDrop(target)')
    img(ng-src='{{target.url}}')

.word
  label(ng-drag='true', data-allow-transform='true', draggable='true')
    span.moving.fa.fa-arrows
    span.can-drop.fa.fa-thumb-tack
    span {{gamePlay.current.word.name}}

.targets
  .target(ng-repeat='target in gamePlay.current.word.image.options.slice(2,4)', ng-drop='true', ng-drop-success='onDrop(target)')
    img(ng-src='{{target.url}}')
