.targets
  .target(ng-repeat='target in current.options.slice(0,2)', ng-drop='true', ng-drop-success='onDrop(target)')
    label {{target.name}}

.word
  label(ng-drag='true', data-allow-transform='true', draggable='false')
    span.moving.fa.fa-arrows
    span.can-drop.fa.fa-thumb-tack
    span {{current.word.name}}

