.scene-param
  label.param-label Focus
  .param-input
    input(type='text', disbaled='true', ng-model='scene.config.focus.text')
    button(ng-click='sceneEditor.add()') Set Focus
    span(set-focus).param-action.fa.fa-pencil

.scene-param
  label.param-label Phrase
  input.param-input(type='text', disbaled='true', ng-model='scene.config.phrase.text')
.scene-param
  label.param-label Transcript
  textarea(ng-model='scene.config.transcript.text').param-input
.scene-param
  label.param-label Options
  .param-input
    .input-options(ng-repeat='option in scene.config.options')
      input.check(type='checkbox', ng-model='option.correct')
      input.checked(ng-model='option.label')
      span.param-action.fa.fa-undo(ng-click='scene.config.options.splice($index, 1)')
    button(ng-click='scene.config.options.push({label: "", correct: false})') Add Option