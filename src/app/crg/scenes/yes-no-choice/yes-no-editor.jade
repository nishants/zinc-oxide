.scene-param
  label.param-label Focus
  .param-input
    input(type='text', disbaled='true', ng-model='scene.config.focus.text')
    span(set-focus).param-action.fa.fa-pencil
    span(ng-click='scene.config.focus = {indices: [], text: []}').param-action.fa.fa-trash-o

.scene-param
  label.param-label Highlight
  .param-input
    input(type='text', disbaled='true', ng-model='scene.config.phrase.text')
    span(set-highlight).param-action.fa.fa-pencil
    span(ng-click='scene.config.phrase = {indices: [], text: []}').param-action.fa.fa-trash-o

.scene-param
  label.param-label Question
  textarea(ng-model='scene.config.question').param-input
.scene-param
  label.param-label Correct Answer
  input.param-input(type='checkbox', ng-model='scene.config.expectedYes')
.scene-param
  label.param-label Message on Wrong Answer
  textarea.param-input(ng-model='scene.config.wrongAnswerMessage')
