.scene-param
  label.param-label Phrases
  .param-input
    .input-options(ng-repeat='keyImage in scene.config.keyImages')
      input(type='text', disabled='disabled', ng-model='keyImage.phrase.text')
      span(add-key-image).param-action.edit.fa.fa-pencil
      span(ng-click='scene.config.keyImages.splice($index, 1)').param-action.remove.fa.fa-trash-o

    button(ng-click='scene.config.keyImages.push({indices: [], text: ""})') Add Key Image Phrase
.scene-param
  label.param-label Minimum Selections
  .param-input
    input(type='number',ng-model='scene.config.expectedCorrectAnswers')
.scene-param
  label.param-label Message
  .param-input
    textarea(ng-model='scene.config.transcript.text')
