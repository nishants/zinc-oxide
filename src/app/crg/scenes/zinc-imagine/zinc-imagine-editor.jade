.scene-param
  label.param-label Focus
  input.param-input(type='text', disbaled='true', ng-model='scene.config.focus.text')
.scene-param
  label.param-label Phrase
  input.param-input(type='text', disbaled='true', ng-model='scene.config.phrase.text')
.scene-param
  label.param-label Transcript
  textarea(ng-model='scene.config.transcript.text').param-input
.scene-param
  label.param-label Correct Usage
  .param-input
    .input-options(ng-repeat='usage in scene.config.usages')
      input.correct(type='checkbox', ng-model='usage.correct')
      input.usage-label(ng-model='usage.label')
    button(ng-click='scene.config.usages.push({label: "", correct: false})') Add Usage