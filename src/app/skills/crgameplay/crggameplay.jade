#crgameplay
  .header
    .logo
      img(src="assets/images/zinc-logo-small.png")
    .crgame-progress
      .connector
      ul
        li Main Idea
        li.current Zincing
        li Skill Practice
        li Main Idea
    .skill-progress
      .skill-name Zinc Skills
        ul
          li Visualize
          li Imagine
          li Key Images
  .body
    .options
      .points
        .value 10
        label Points
      .sound
        button.fa.fa-volume-up
      .exit(ng-click='game.player.exit()')
        button.fa.fa-sign-out
    .passage
      .title
        span From:&nbsp;
        span.from(ng-bind='game.from')
      .author
        span By&nbsp;
        span.by(ng-bind='game.by')
      .text.phrase-selector(on-text-select='game.onSelect($selection.indices)')
        .word(ng-repeat='word in game.passage', ng-class='{"line-break" : word.linebreak, "highlight": word.highlight}', data-word-number='{{$index}}') {{word.text}}
    .transcript
      .transcript-dialog
        .transcript-message(ng-bind='game.player.state.transcript.text')
        ul.select-options
          li(ng-repeat='option in game.player.state.options',ng-init='_selected=false', ng-click='_selected = !_selected')
            .check-box.fa.fa-check-square(ng-show='_selected')
            .check-box.fa.fa-square-o(ng-hide='_selected')
            label {{option.label}}
        ul.buttons
          li(ng-repeat='button in game.player.state.buttons')
            button(ng-click='button.onClick()') {{button.label}}
      .transcript-window
        img(src='assets/images/transcript-speaker.png')

    .user-input(ng-if='game.player.state.showInput')
      textarea(ng-model='game.player.input')
      button.button-outline.submit(ng-click='game.player.state.submitInput(game.player.input)')
h1(ng-bind='game.selectedText')